<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:controls="clr-namespace:Syddjurs.CustomControls"
             x:Class="Syddjurs.Pages.ItemPage"
             Title="Nyt tøj">


    <VerticalStackLayout>
        <Grid >
            <VerticalStackLayout Margin="10,0,10,10">
                <Grid HeightRequest="80">
                    <Border Stroke="{StaticResource Primary}" StrokeThickness="1" Margin="10,10,10,20" >
                        <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5" />
                        </Border.StrokeShape>
                    <controls:CustomEntry x:Name="ItemName"                          
                            HeightRequest="50"
                            BackgroundColor="{StaticResource White}"
                            TextColor="Black"
                            
                            UnderlineColor="Transparent" />
                    </Border>
                    
                    <Label Text="Navn"
                        FontSize="14"
                        BackgroundColor="White"
                        TextColor="{StaticResource Primary}"
                        Padding="4,0"
                        Margin="25,0,0,0"
                        HorizontalOptions="Start"
                        VerticalOptions="Start" />
                </Grid>
                <Grid>
                    <Border Stroke="{StaticResource Primary}" StrokeThickness="1" Margin="10,10,10,20" >
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5" />
                    </Border.StrokeShape>
                    <Editor x:Name="ItemDescription" 
                        AutoSize="TextChanges"
                            HeightRequest="100"
                        MaxLength="500"
                        FontSize="16"
                        BackgroundColor="White"
                        TextColor="Black"
                        Text="{Binding Description}" />
                </Border>
                    <Label Text="Beskrivelse"
                           FontSize="14"
                            BackgroundColor="White"
                            TextColor="{StaticResource Primary}"
                            Padding="4,0"
                            Margin="25,0,0,0"
                            HorizontalOptions="Start"
                            VerticalOptions="Start" />
                    </Grid>
            </VerticalStackLayout>


        </Grid>
        <Grid Padding="0" HeightRequest="50" Margin="20,0,20,10">
            <Border Stroke="{StaticResource Primary}" StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5" />
                </Border.StrokeShape>

                <Grid Padding="0" >
                    <controls:CustomEntry x:Name="CategoryEntryChange"
                                 Text="{Binding SelectedCategory.Category}"
                                 Placeholder="Vælg kategori"
                                 BackgroundColor="{StaticResource White}"
                                 TextColor="Black"
                                 UnderlineColor="Transparent"
                                 IsReadOnly="True"  
                                 IsSpellCheckEnabled="False"
                                 IsTextPredictionEnabled="False"         
                                >
                        <Entry.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCategoryEntryTapped" />
                        </Entry.GestureRecognizers>
                    </controls:CustomEntry>

                    
                    <Image Source="arrowdowna.jpg"
                            WidthRequest="40"
                            HeightRequest="20"
                            Grid.Column="1"                           
                            VerticalOptions="Center"                           
                            HorizontalOptions="End" >
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCategoryEntryTapped" />
                            </Image.GestureRecognizers>
                    </Image>
                </Grid>
            </Border>
            <Label Text="Kategori"
                FontSize="14"
                BackgroundColor="White"
                TextColor="{StaticResource Primary}"
                Padding="4,0"
                Margin="25,-10,0,0"
                HorizontalOptions="Start"
                VerticalOptions="Start" />
        </Grid>
        <Grid IsVisible="{Binding IsDropdownVisible}" Margin="20,-11,20,20">
            <Border Stroke="{StaticResource Primary}" StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0" />
                </Border.StrokeShape>
                <CollectionView x:Name="DropdownList"              
                    ItemsSource="{Binding CategoryList}"
                    SelectionMode="Single"
                    SelectionChanged="OnCategorySelected"          
                    HorizontalOptions="Start"
                    HeightRequest="100"
                    Margin="0,0,0,0"
                    WidthRequest="100">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0" Margin="0,0,0,0">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Transparent" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="{StaticResource Gray100}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <!--<Frame  InputTransparent="True" Margin="20"  Padding="0" BorderColor="Green">
                            <Label Text="{Binding Category}" />
                        </Frame>-->
                                <Label Text="{Binding Category}" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
        </Grid>
        <Grid Padding="0" HeightRequest="50"  Margin="20,20,20,10">
            <Border Stroke="{StaticResource Primary}" StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5" />
                </Border.StrokeShape>
                <Grid Padding="0">
                    <controls:CustomEntry x:Name="SexEntryChange"
                          Text="{Binding SelectedSex}"
                          Placeholder="Vælg køn"
                          BackgroundColor="{StaticResource White}"
                          TextColor="Black"
                          UnderlineColor="Transparent"
                          IsReadOnly="True"  
                          IsSpellCheckEnabled="False"
                          IsTextPredictionEnabled="False"
                         >
                        <Entry.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSexyEntryTapped" />
                        </Entry.GestureRecognizers>
                    </controls:CustomEntry>


                    <Image Source="arrowdowna.png"
                            WidthRequest="40"
                            HeightRequest="20"
                            Grid.Column="1"                           
                            VerticalOptions="Center"           
                            HorizontalOptions="End" >
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSexyEntryTapped" />
                            </Image.GestureRecognizers>
                    </Image>
                </Grid>
            </Border>
            <Label Text="Køn"
                    FontSize="14"
                    BackgroundColor="White"
                    TextColor="{StaticResource Primary}"
                    Padding="4,0"
                    Margin="25,-10,0,0"
                    HorizontalOptions="Start"
                    VerticalOptions="Start" />
        </Grid>
        <Grid IsVisible="{Binding IsSexDropdownVisible}" Margin="20,-11,20,20">
            <Border Stroke="{StaticResource Primary}" StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0" />
                </Border.StrokeShape>
                <CollectionView x:Name="SexDropdownList"              
             ItemsSource="{Binding Sex}"
             SelectionMode="Single"
             SelectionChanged="OnSexSelected"          
             HorizontalOptions="Start"            
             Margin="10,0,0,0"
             WidthRequest="800">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0" Margin="0,0,0,20">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Transparent" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="{StaticResource Gray100}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <!--<Frame  InputTransparent="True" Margin="20"  Padding="0" BorderColor="Green">
                     <Label Text="{Binding Category}" />
                 </Frame>-->
                                <Label Text="{Binding }" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
        </Grid>
        <Grid >
            <VerticalStackLayout Margin="20,0,20,0">
                <Grid>
                <Border Stroke="{StaticResource Primary}" StrokeThickness="1" Margin="0,10,0,20" >
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5" />
                    </Border.StrokeShape>
                    <controls:CustomEntry x:Name="NumberOfItemsEntry"                       
                        WidthRequest="200"
                        Keyboard="Numeric"
                        BackgroundColor="{StaticResource White}"
                        HorizontalOptions="Start"
                        TextColor="Black"
                        UnderlineColor="Transparent" />
                </Border>

                    <Label Text="Antal"
                        FontSize="14"
                        BackgroundColor="White"
                        TextColor="{StaticResource Primary}"
                        Padding="4,0"
                        Margin="25,0,0,0"
                        HorizontalOptions="Start"
                        VerticalOptions="Start" />
                </Grid>
                <Grid>
                <Border Stroke="{StaticResource Primary}" StrokeThickness="1" Margin="0,10,0,20" >
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5" />
                    </Border.StrokeShape>
                    <controls:CustomEntry x:Name="ColorEntry"                        
                            WidthRequest="200"
                         BackgroundColor="{StaticResource White}"
                         HorizontalOptions="Start"
                         TextColor="Black"
                         UnderlineColor="Transparent" />
                </Border>
                <Label Text="Farve"
                        FontSize="14"
                        BackgroundColor="White"
                        TextColor="{StaticResource Primary}"
                        Padding="4,0"
                         Margin="25,0,0,0"
                        HorizontalOptions="Start"
                        VerticalOptions="Start" />
                </Grid>
                <Grid>
                    <Border Stroke="{StaticResource Primary}" StrokeThickness="1" Margin="0,0,0,20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5" />
                    </Border.StrokeShape>
                    <controls:CustomEntry x:Name="SizeEntry"
                     WidthRequest="200"
                    BackgroundColor="{StaticResource White}"
                    HorizontalOptions="Start"
                    TextColor="Black"
                    UnderlineColor="Transparent" />
                </Border>
                    <Label Text="Størrelse"
                            FontSize="14"
                            BackgroundColor="White"
                            TextColor="{StaticResource Primary}"
                            Padding="4,0"
                            Margin="25,-7,0,0"
                            HorizontalOptions="Start"
                            VerticalOptions="Start" />
                </Grid>
                <Grid>
                    <Border Stroke="{StaticResource Primary}" StrokeThickness="1" Margin="0,0,0,20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5" />
                    </Border.StrokeShape>
                    <HorizontalStackLayout Padding="10">
                        <CheckBox x:Name="lendableCheck"
                        IsChecked="{Binding IsLendable}" />
                        <Label Text="Ja"
                            VerticalOptions="Center"
                            />
                    </HorizontalStackLayout>
                </Border>
                    <Label Text="Kan udlånes"
        FontSize="14"
        BackgroundColor="White"
        TextColor="{StaticResource Primary}"
        Padding="4,0"
        Margin="25,-7,0,0"
        HorizontalOptions="Start"
        VerticalOptions="Start" />
                </Grid>
            </VerticalStackLayout>
        </Grid>
        <Button Text="Gem" Clicked="SaveClicked" Padding="0,0,0,0" Margin="10,0,0,10" />
    </VerticalStackLayout>
</ContentPage>